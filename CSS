# з кореня проєкту
mkdir -p assets

cat > assets/hide_header_and_fullscreen.css <<'CSS'
/* Повністю прибираємо верхні панелі і займаємо весь екран */
html, body, #react-entry-point, .dash, .dash-viewport {
  height: 100% !important;
  width: 100% !important;
  margin: 0 !important;
  padding: 0 !important;
  background: black !important;
}

/* Сховати заголовки / топ-бари які можуть рендеритись */
header, .header, .topbar, .top-bar, .page-header, .navbar, .navbar-brand,
.navbar-default, .dbc-navbar, .app-header, .title-bar, .site-header,
.title, .top-panel, .top-row {
  display: none !important;
  height: 0 !important;
  margin: 0 !important;
  padding: 0 !important;
  background: transparent !important;
}

/* Примусово растягнути графік на весь простір */
.plotly-graph-div, .dash-graph, #live-graph, .live-graph {
  position: absolute !important;
  top: 0 !important;
  left: 0 !important;
  right: 0 !important;
  bottom: 0 !important;
  width: 100% !important;
  height: 100% !important;
  margin: 0 !important;
  padding: 0 !important;
}

/* Контейнери bootstrap */
.container, .container-fluid, .app-root, .app-content, #page-content {
  width: 100% !important;
  height: 100% !important;
  padding: 0 !important;
  margin: 0 !important;
}
CSS
